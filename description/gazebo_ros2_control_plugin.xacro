            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <joint name="BL_uleg_joint">
            <command_interface name="position">
                <param name="min">-1.2217</param>
                <param name="max">3.14</param>
            </command_interface>
            <state_interface name="position">
                <param name="initial_value">0.0</param>
            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <joint name="BL_lleg_joint">
            <command_interface name="position">
                <param name="min">0.45</param>
                <param name="max">2.3562</param>
            </command_interface>
            <state_interface name="position">
                <param name="initial_value">0.45</param>
            </state_interface>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
    </ros2_control>

    <!--  CONFIGURE THE GAZEBO PLUGIN -->
    <gazebo>
        <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
          <parameters>$(find p5)/config/hyperdog_joint_controller.yaml</parameters>
        </plugin>
    </gazebo>


</robot> 